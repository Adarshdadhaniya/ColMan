<% layout("/layouts/boilerplate") %>
<div class="container mt-5">
  <h2 class="mb-4">All Timetables</h2>

  <div class="row">
    <div class="col-md-6">
      <h4>Class Groups</h4>
      <ul class="list-group">
        <% classGroups.forEach(group => { %>
          <li class="list-group-item">
            <a href="/admin/timetable/by-class/<%= group %>"><%= group %></a>
          </li>
        <% }) %>
      </ul>
    </div>

    <div class="col-md-6">
      <h4>Teachers</h4>
      <ul class="list-group">
        <% teachers.forEach(teacher => { %>
          <li class="list-group-item">
            <a href="/admin/timetable/by-teacher/<%= teacher._id %>"><%= teacher.username %> (<%= teacher.email %>)</a>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>
